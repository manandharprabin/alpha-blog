<%= render "shared/errors", obj: @user %>

<div class="row">
	<div class = "col-sm-12">

		<%= form_for(@user, html: {class: "form-horizontal", role: "form"}) do |f| %>
		<div class = "form-group">
			<div class = "col-sm-2 control-label">
				<%= f.label :user_name %>
			</div>
			<div class = "col-sm-10">
				<%= f.text_field :user_name, class: "form-control", placeholder: "Enter User Name", autofocus: true %>
			</div>
		</div>
		<div class = "form-group">
			<div class = "col-sm-2 control-label">
				<%= f.label :email %>
			</div>
			<div class = "col-sm-10">
				<%= f.email_field :email,  class: "form-control", placeholder: "Enter Email Address" %>
			</div>
		</div>
		<div class = "form-group">
			<div class = "col-sm-2 control-label">
				<%= f.label :password %>
			</div>
			<div class = "col-sm-10">
				<%= f.password_field :password,  class: "form-control", placeholder: "Enter Password" %>
			</div>
		</div>
		
		<div class="form-group">
    		<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit(@user.new_record? ? "SignUp" : "Update Account", class: "btn btn-primary btn-lg") %> 
			</div>
		</div>
		<% end %>
		<div class = "col-sm-offset-4 col-sm-4">
			[<%= link_to "Cancel request and Back to Articles", articles_path %>]
		</div>
	</div>
</div>