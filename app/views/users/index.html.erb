<h1 align="center"> List of Users: </h1>
	<div class="center">
		<%= will_paginate %>	
		<% @users.each do |user| %>
		<ul class="listings">
			
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li>
						<%= link_to gravatar_for(user), user_path(user) %>
					</li>
					<li class="article-title">
						<%= link_to user.user_name, user_path(user) %>
					</li>
					<% if logged_in? and current_user.admin? %>
						<li> 
						
							<%= link_to "Delete User", user_path(user), method: :delete, data: {confirm: "Are you sure to delete this user and his/her all articles?"} %>
						</li>
					<% end %>		
					<li>

						<small> <%= pluralize(user.articles.count, "article") if user.articles %></small>
					</li>
				</div>
			</div>		
		</ul>
		<% end %>		
		<%= will_paginate %>
	</div>